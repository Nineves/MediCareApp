<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout

            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="178dp"
            android:background="@drawable/rounded_rec"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="369dp"
                android:layout_marginTop="11dp"
                android:background="@null"
                android:elevation="1dp"
                android:onClick="sendMessage"
                android:src="@drawable/ic_baseline_add_24"></ImageButton>

            <ImageButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:elevation="1dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:background="@null"
                android:onClick="sendMessage"
                ></ImageButton>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/button1"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">

            </soup.neumorphism.NeumorphButton>

            <TextView
                android:id="@+id/ourMR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button1"
                android:layout_alignTop="@id/button1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/lato_bold"
                android:text="Chlorphenamine"
                android:textColor="@color/fontColor"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button1"
                android:layout_alignTop="@id/button1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/lato_medium"
                android:text="today 18:00, 1 pill/time, 3 times/day"
                android:textSize="12dp" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/button2"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">


            </soup.neumorphism.NeumorphButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button2"
                android:layout_alignTop="@id/button2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/lato_bold"
                android:text="King To Nin Jiom"
                android:textColor="@color/fontColor"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button2"
                android:layout_alignTop="@id/button2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/lato_medium"
                android:text="tomorrow 09:00, 15 ml/time, 3 times/day"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button2"
                android:layout_alignTop="@id/button2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="58dp"
                android:fontFamily="@font/lato_medium"
                android:text="Do not take this with water"
                android:textColor="@color/fontColor_lighter"
                android:textSize="11dp" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/button3"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">


            </soup.neumorphism.NeumorphButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button3"
                android:layout_alignTop="@id/button3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/lato_bold"
                android:text="Ichthammol Ointment"
                android:textColor="@color/fontColor"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button3"
                android:layout_alignTop="@id/button3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/lato_medium"
                android:text="today 20:00, 4 times/day"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/button3"
                android:layout_alignTop="@id/button3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="58dp"
                android:fontFamily="@font/lato_medium"
                android:text="External use"
                android:textColor="@color/fontColor_lighter"
                android:textSize="11dp" />
        </RelativeLayout>

    </ScrollView>


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:elevation="-3dp"
        android:src="@drawable/logo"></androidx.constraintlayout.utils.widget.ImageFilterView>


    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Medicine
                        Reminder"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bold"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="45dp"
        android:elevation="-1dp"></TextView>

</RelativeLayout>